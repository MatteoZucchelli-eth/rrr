<mujoco model="RRR Robot">
  <compiler angle="degree" meshdir="../mesh/"/>
  <asset>
    <mesh name="base_joint" file="base_joint - Part 1.stl"/>
    <mesh name="first_arm" file="first_arm - Part 1.stl"/>
    <mesh name="second_arm" file="second_arm - Part 1.stl"/>
    <mesh name="third_arm" file="third_arm - Part 1.stl"/>
  </asset>

  <worldbody>
    <body name="base" pos="0 0 0" euler="-90 0 0">
      <body name="base_joint" pos="0 -0.15 0">
        <geom type="mesh" mesh="base_joint"/>
        <body name="first_arm" pos="0 -0.175 0">
          <joint name="joint1" type="hinge" axis="0 1 0" limited="true" range="-180 180"/>
          <geom type="mesh" mesh="first_arm"/>
            <body name="second_arm" pos="0 0.3 1">
                <joint name="joint2" type="hinge" axis="0 1 0" limited="true" range="-180 180"/>
                <geom type="mesh" mesh="second_arm"/>
                <body name="third_arm" pos="0 -0.3 1">
                    <joint name="joint3" type="hinge" axis="0 1 0" limited="true" range="-180 180"/>
                    <geom type="mesh" mesh="third_arm" euler="0 0 180"/>
                </body>
            </body>
        </body>
      </body>
    </body>
  </worldbody>
  

  <actuator>
    <position name="pos_joint1" joint="joint1" kp="50" kv="15"/>
    <position name="pos_joint2" joint="joint2" kp="50" kv="15"/>
    <position name="pos_joint3" joint="joint3" kp="50" kv="15"/>
  </actuator>
  
  <keyframe>
    <key name="home" qpos="0 0 0" />
  </keyframe>
</mujoco>
